<div class="card text-white border-dark">
	<img class="card-img" src="{{movie.url_image ? "/assets/images/" ~ movie.url_image : 'https://live.staticflickr.com/2151/2144882415_7a8d4999e7_c.jpg'}}" alt="Card image">
	<div class="card-img-overlay align-items-start d-flex flex-column justify-content-end card-text-effects">
		<h5 class="card-title m-0 text-title-size">{{movie.name ?? 'Titre'}}</h5>
		<p class="card-text m-0 text-body-size">{{movie.release_date ?? 'Release_date'}}</p>
		<p class="card-text m-0 text-body-size">with {{movie.actors ?? 'Actors'}}</p>
	</div>
</div>
